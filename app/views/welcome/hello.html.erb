<% if params[:name1].present? && params[:name2].present? %>
  <h1>Hello <%= params[:name1].capitalize%>, have you met <%= params[:name2].capitalize%>? <%= params[:name2].capitalize%>, this is <%= params[:name1].capitalize%>.
<% elsif params[:name1].present? %>
  <h1>Hello <%= params[:name1].capitalize%>!</h1>
<% else %>
<h1>Hello!</h1>
<% end %>
